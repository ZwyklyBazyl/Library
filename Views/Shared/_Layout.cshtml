<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BIBLIOTEKA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-dark navbar-fixed-top" style="background-color: #FF9D09;" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav" >
                    <li style="background-color: #ffb74b;">@Html.ActionLink("Książki", "ZbiorKsiazek", "ZbiorKsiazek", "ZbiorKsiazek", new { style = "color: #000;" })</li>
                    <li style="background-color: #ffb74b;">@Html.ActionLink("Wypożyczający", "ZbiorWypozyczajacych", "ZbiorWypozyczajacych", "ZbiorWypozyczajacych", new { style = "color: #000;" })</li>
                </ul>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BIBLIOTEKA</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
